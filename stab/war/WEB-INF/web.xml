<?xml version="1.0" encoding="UTF-8" standalone="no"?><web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="3.1" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">

    <servlet>
        <servlet-name>com.mySampleApplication.MySampleApplication BookssService</servlet-name>
        <servlet-class>com.mySampleApplication.server.BookssServiceImpl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>com.mySampleApplication.MySampleApplication AddBookService</servlet-name>
        <servlet-class>com.mySampleApplication.server.AddBookServiceImpl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>com.mySampleApplication.MySampleApplication DeleteBookService</servlet-name>
        <servlet-class>com.mySampleApplication.server.DeleteBookServiceImpl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>com.mySampleApplication.MySampleApplication SortedService</servlet-name>
        <servlet-class>com.mySampleApplication.server.SortedServiceImpl</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>com.mySampleApplication.MySampleApplication BookssService</servlet-name>
        <url-pattern>/MySampleApplication/book</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>com.mySampleApplication.MySampleApplication AddBookService</servlet-name>
        <url-pattern>/MySampleApplication/addbook</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>com.mySampleApplication.MySampleApplication DeleteBookService</servlet-name>
        <url-pattern>/MySampleApplication/deleteBook</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>com.mySampleApplication.MySampleApplication SortedService</servlet-name>
        <url-pattern>/MySampleApplication/sorted</url-pattern>
    </servlet-mapping>

</web-app>